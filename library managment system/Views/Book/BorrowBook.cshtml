@{
    ViewBag.Title = "Borrow Book";
}

<h2></h2>
<div class="main-banner" id="top">
<div class="contact-us section" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-6  align-self-center">
                <div class="section-heading">
                    <h6>Borrow Book</h6>
                    <p>Borrowing Period from week to 15 days</p>
                    <div class="special-offer">
                        <span class="offer">off<br><em>50%</em></span>
                        <h6>Valide: <em>24 April 2036</em></h6>
                        <h4>Special Offer <em>50%</em> OFF!</h4>
                        <a href="#"><i class="fa fa-angle-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contact-us-content">
                    <form id="contact-form" asp-action="BorrowBook" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <fieldset>
                                    <div class="form-group">
                                        <label>Person Code</label>
                                        <input type="text" class="form-control" name="code" />
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <div class="form-group">
                                        <label>Book Name</label>
                                        <input type="text" class="form-control" name="bookName" />
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="orange-button">Borrow Book</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@if (ViewData.ModelState.ContainsKey(""))
{
    <div class="alert alert-danger">
        @ViewData.ModelState[""].Errors[0].ErrorMessage
    </div>
}
