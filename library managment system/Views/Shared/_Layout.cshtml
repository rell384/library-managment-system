<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>Scholar - Online School HTML5 Template</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">


    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/css/fontawesome.css">
    <link rel="stylesheet" href="~/css/templatemo-scholar.css">
    <link rel="stylesheet" href="~/css/owl.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet"href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>
<!--

TemplateMo 586 Scholar

https://templatemo.com/tm-586-scholar

-->
  </head>

<body>

  <!-- ***** Preloader Start ***** -->
  <div id="js-preloader" class="js-preloader">
    <div class="preloader-inner">
      <span class="dot"></span>
      <div class="dots">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  </div>
 
  <!-- ***** Header Area Start ***** -->
  <header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                        <a asp-controller="Home" asp-action="Index" class="logo">
                        <h1>Library</h1>
                    </a>
                    <!-- ***** Logo End ***** -->
                    <!-- ***** Serach Start ***** -->
                    <div class="search-input">
                      <form id="search" action="#">
                        <input type="text" placeholder="Type Something" id='searchText' name="searchKeyword" onkeypress="handle" />
                        <i class="fa fa-search"></i>
                      </form>
                    </div>
                    <!-- ***** Serach Start ***** -->
                    <!-- ***** Menu Start ***** -->
                        <ul class="nav" style="color: darkgray;">
                            <li class="scroll-to-section"><a asp-controller="Book" asp-action="AllBooks" class="active">Our Library</a></li>
                            <li class="scroll-to-section"><a asp-controller="Book" asp-action="BorrowBook"> Borrow Book</a></li>
                            <li class="scroll-to-section"><a asp-controller="Book" asp-action="ReturnBook">Return Book</a></li>
                            <li class="scroll-to-section"><a asp-controller="Book" asp-action="AddBook">Add Book</a></li>
                            <li class="scroll-to-section"><a asp-controller="Person" asp-action="AddPerson">Add Person</a></li>
                        </ul>

                        <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
  </header>
  
  @RenderBody()

   
  
  
  <footer>
    <div class="container">
      <div class="col-lg-12">
        <p>Copyright © 2036 library . All rights reserved. &nbsp;&nbsp;&nbsp; Design: <a  rel="nofollow" target="_blank"></a></p>
      </div>
    </div>
  </footer>

  <!-- Scripts -->
  <!-- Bootstrap core JavaScript -->
  <script src="~/lib/jquery/dist/jquery.js"></script>
  <script src="~/lib/bootstrap/dist/css/bootstrap.min.js"></script>
  <script src="~/js/isotope.min.js"></script>
  <script src="~/js/owl-carousel.js"></script>
  <script src="~/js/counter.js"></script>
  <script src="~/js/custom.js"></script>

  </body>
</html>